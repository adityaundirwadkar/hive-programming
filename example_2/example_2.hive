SELECT MOVIES.MOVIE_ID, MOVIES.TITLES, MOVIES.GENRES, AVG(RATINGS.RATING) 
FROM USERS JOIN RATINGS ON USERS.USER_ID = RATINGS.USER_ID 
JOIN MOVIES ON MOVIES.MOVIE_ID = RATINGS.MOVIE_ID  
WHERE USERS.GENDRE = "M" AND (INSTR(MOVIES.GENRES,"Action")>0 OR INSTR(MOVIES.GENRES,"Drama")>0) 
GROUP BY MOVIES.MOVIE_ID,MOVIES.TITLES,MOVIES.GENRES 
HAVING  AVG(RATING)  >= 4.4 AND  AVG(RATING)  <= 4.7;